      {{i18n "intro-all-projects.intro-projects-switch-apps"}}
    </button>
    <button
      class="works-first-section__button button button_type_sub
             button_color_white text_type_common text_color_white
             hover_transition_xs"
      data-button-filter="branding"
    >
      {{i18n "intro-all-projects.intro-projects-switch-branding"}}
    </button>
    <button
      class="works-first-section__button button button_type_sub
             button_color_white text_type_common text_color_white
             hover_transition_xs"
      {{!-- data-button-filter="advertising" --}}
    >
      {{i18n "intro-all-projects.intro-projects-switch-advertising"}}
    </button>
  </div>
</section>